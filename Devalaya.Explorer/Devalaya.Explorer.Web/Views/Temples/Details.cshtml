@model Devalaya.Explorer.DataAccess.Entities.Temple

@{
    ViewData["Title"] = @Model.Name;
    Layout = "_Layout";
}

<section class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1><b>@Model.Name</b></h1>
        <h4><b>Location:</b> @Model.Address</h4>
        <h4><b>Deity:</b> @Model.Deity</h4>
    </div>

    <!-- Introduction Section -->
    <div class="mb-5">
        <h2 class="mb-3 fw-bold">About @Model.Name</h2>
        <p>Made Year: @Model.MadeYear</p>
    </div>

    <!-- Historical Background -->
    <div class="mb-5">
        <h2 class="mb-3 fw-bold">Historical Background</h2>
        <p>@Model.Details</p>
    </div>

    <!-- Gallery Section -->
    <div class="mb-5">
        <h3 class="text-center fw-bold mb-4">Gallery</h3>
        <div class="row justify-content-center">
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Temple Image" style="height: 200px; object-fit: cover;">
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Temple Image" style="height: 200px; object-fit: cover;">
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Temple Image" style="height: 200px; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>

    <!-- Review Form -->
    <div class="mb-5">
        <h4 class="text-center mb-3">Please Rate this Site</h4>
        <form id="reviewForm">
            <div class="d-flex justify-content-center mb-3 star-rating">
                <input type="radio" id="star5" name="rating" value="5" class="d-none" />
                <label for="star5" class="fs-1 text-warning mx-1" style="cursor: pointer;">
                    <i class="fa-solid fa-star"></i>
                </label>

                <input type="radio" id="star4" name="rating" value="4" class="d-none" />
                <label for="star4" class="fs-1 text-warning mx-1" style="cursor: pointer;">
                    <i class="fa-solid fa-star"></i>
                </label>

                <input type="radio" id="star3" name="rating" value="3" class="d-none" />
                <label for="star3" class="fs-1 text-warning mx-1" style="cursor: pointer;">
                    <i class="fa-solid fa-star"></i>
                </label>

                <input type="radio" id="star2" name="rating" value="2" class="d-none" />
                <label for="star2" class="fs-1 text-warning mx-1" style="cursor: pointer;">
                    <i class="fa-solid fa-star"></i>
                </label>

                <input type="radio" id="star1" name="rating" value="1" class="d-none" />
                <label for="star1" class="fs-1 text-warning mx-1" style="cursor: pointer;">
                    <i class="fa-solid fa-star"></i>
                </label>
            </div>

            <div class="mb-3">
                <textarea rows="5" name="comment" class="form-control" placeholder="Your Comment..." required></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary w-25">Send</button>
            </div>
        </form>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Star click animation
    document.querySelectorAll('.star-rating label').forEach(star => {
        star.addEventListener('click', function () {
            this.style.transform = 'scale(1.2)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 200);
        });
    });

    // Optional: prevent form submission for now
    document.getElementById('reviewForm').addEventListener('submit', function (e) {
        e.preventDefault();
        alert('Review submitted (frontend only).');
    });
</script>
