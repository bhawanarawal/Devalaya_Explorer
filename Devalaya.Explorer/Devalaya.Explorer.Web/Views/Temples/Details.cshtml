@model Devalaya.Explorer.DataAccess.Entities.Temple

@{
    ViewData["Title"] = @Model.Name;
    Layout = "_Layout";
}

<section class="container-fluid py-4 px-4">
    
    <div class="text-center mb-4">
        <h1 class="display-3 fw-bold">@Model.Name</h1>
        <p class="h5 mb-1"><b>Location:</b> @Model.Address</p>
        <p class="h5"><b>Deity:</b> @Model.Deity</p>
    </div>

   
    <div class="mb-3">
        <h2 class="h2 fw-bold mb-4">About @Model.Name</h2>
        <p class="text-muted mb-1"><b>Built Year:</b> @Model.BuiltYear</p>
    </div>

   
    <div class="mb-3">
        <h2 class="h2 fw-bold mb-4">Historical Background</h2>
        <p>@Model.Details</p>
    </div>

  
    <div class="mb-5">
        <h3 class="text-center h3 fw-bold mb-4">Gallery</h3>
        <div class="row g-3 justify-content-center">
            @foreach (var image in Model.Galleries)
            {
                <div class="col-6 col-sm-4 col-md-3">
                    <div class="card rounded-3 overflow-hidden shadow-sm">
                        <img src="/@image.ImagePath" class="card-img-top img-fluid" alt="Temple Image" style="height: 180px; object-fit: cover;">
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mb-5">
        <h4 class="text-center h4 fw-bold mb-4">Please Rate this Site</h4>
        <form id="reviewForm" class="mx-auto" style="max-width: 600px;">
            <div class="d-flex justify-content-center mb-3 star-rating">
                @for (int i = 5; i >= 1; i--)
                {
                    <input type="radio" id="star@i" name="rating" value="@i" class="d-none" />
                    <label for="star@i" class="fs-2 text-warning mx-1" style="cursor: pointer;">
                        <i class="fa-solid fa-star"></i>
                    </label>
                }
            </div>

            <div class="mb-3">
                <textarea rows="5" name="comment" class="form-control" placeholder="Your Comment..." required></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg px-4">Send</button>
            </div>
        </form>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
   
    document.querySelectorAll('.star-rating label').forEach(star => {
        star.addEventListener('click', function () {
            this.style.transform = 'scale(1.3)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 200);
        });
    });

    
    document.getElementById('reviewForm').addEventListener('submit', function (e) {
        e.preventDefault();
        alert('Review submitted (frontend only).');
    });
</script>
