@model List<Temple>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<section class="alltemples-header text-center">
    <h1><b><i class="fa-solid fa-om"></i> Temples <i class="fa-solid fa-om"></i></b></h1>

    <div class="mt-4 px-3">
        <div class="row gx-4" id="templesContainer">
            @foreach (var temple in Model)
            {
                <div class="col-lg-3 mb-4 temple-card">
                    <div class="card h-100">
                        <img src="@(temple.Galleries?.Count == 0 ? "images/home-4.jpg" : temple.Galleries[0].ImagePath)"
                             class="card-img-top"
                             style="height: 170px; object-fit: cover;"
                             alt="@temple.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><b>@temple.Name</b></h5>
                            <p class="card-text">Deity: @temple.Deity</p>
                            <div class="mt-auto d-flex justify-content-between">
                                <button class="btn btn-outline-danger">❤</button>
                                <a asp-controller="Temples" asp-action="Details" asp-route-slug="@temple.Slug" class="btn btn-light">
                                    See More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <button id="loadMoreBtn" class="btn btn-primary">Load More</button>
        </div>
    </div>
</section>
