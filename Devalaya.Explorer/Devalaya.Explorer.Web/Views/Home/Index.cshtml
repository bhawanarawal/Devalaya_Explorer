@model HomePageModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<!-- Hero Carousel -->
<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/home-3.jpg" class="d-block w-100" style="height: 700px; alt="Image 1">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>श्रीमद् भागवत गीता</b></h1>
                <p>“Believe me! I am the only truth”</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/home-4.jpg" class="d-block w-100" style="height: 700px; object-fit: cover;" alt="Image 2">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>श्रीमद् भागवत गीता :</b></h1>
                <p>“You are only entitled to the action, never to its fruits.”</p>
            </div>
        </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>

<!-- Temples Section -->
<section class="temples-header text-center my-2">
    <h3><i class="fa-solid fa-om"></i> Temples <i class="fa-solid fa-om"></i></h3>
    <h1><b>Most Recent Temples</b></h1>
    <div class="row justify-content-center ">
       
        @foreach (var temple in Model.Temples)
        {
            <div class="col-lg-3 col-md-6 mb-1">
                <div class="card h-100 shadow-sm">
                    <img src="@(temple.Galleries?.Count == 0 ? "images/home-4.jpg" : temple.Galleries[0].ImagePath)" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@temple.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title"><b>@temple.Name</b></h5>
                        <p class="card-text">Deity: @temple.Deity</p>
                      
                        <a asp-controller="Temples" asp-action="Details" asp-route-slug="@temple.Slug" class="btn btn-outline-primary">
                            See More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <a href="/Temples" class="btn btn-outline-primary btn-lg" style="border-width:2px;"> See More Temples</a>
    </div>
</section>


<section class="section-about my-3 text-center">
    <h3><i class="fa-solid fa-om"></i> Sacred Knowledge <i class="fa-solid fa-om"></i></h3>
    <h1><b>Some Life Lessons</b></h1>

    
    <div class="row align-items-center">
        <div class="col-md-4 text-center">
            <img src="~/images/black-1.webp"alt="Sacred Knowledge"style="max-height: 350px;">
        </div>

       
        <div class="col-md-6 text-center">
            <h2><i class="fa-solid fa-om"></i> We Hindus believe in the holy Vedas, the eternal light of divine knowledge</h2>
            

            <div class="row justify-content-center mt-4">
                <div class="col-md-5">
                    <p><i class="fa-solid fa-check text-success"></i> Rig-veda</p>
                    <p><i class="fa-solid fa-check text-success"></i> Sama-Veda</p>
                </div>
                <div class="col-md-5">
                    <p><i class="fa-solid fa-check text-success"></i> Yajur-Veda</p>
                    <p><i class="fa-solid fa-check text-success"></i> Atharva-Veda</p>
                </div>
            </div>

            <a href="/Lessons" class="btn btn-outline-primary btn-lg">Learn More</a>
        </div>
    </div>
</section>



<!-- Events Section -->
<section class="section-events text-center my-4">
    <h3><i class="fa-solid fa-om"></i> Festivals <i class="fa-solid fa-om"></i></h3>
    <h1><b>Latest Events</b></h1>

    <div class="row justify-content-center mt-4">
        @foreach (var ev in Model.Events)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 shadow-sm rounded-2" style="min-height: 150px;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-truncate" style="color: #ff4500; font-size: 1.4rem;">
                            <b>@ev.Name</b>
                        </h5>
                        <p class="card-text mb-2">
                            <i class="fa-solid fa-place-of-worship me-2"></i>
                            <b>Temple:</b> @(ev.Temple?.Name ?? "NA")
                        </p>
                        <p class="card-text mb-2">
                            <i class="fa-regular fa-calendar-days me-2"></i>
                            <b>Event Date:</b> @ev.EventDate.ToString("yyyy-MM-dd")
                        </p>
                        <p class="card-text">
                            <i class="fa-solid fa-phone me-2"></i>
                            <b>Contact:</b> @ev.Contact
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-2">
        <a href="/Events" class=" btn btn-outline-primary  btn-lg">See More Events</a>
    </div>
</section>



