@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<!-- Hero Carousel -->
<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/home-3.webp" class="d-block w-100" style="height: 650px; object-fit: cover;" alt="Image 1">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>श्रीमद् भागवत गीता</b></h1>
                <p>“Believe me! I am the only truth”</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/home-4.webp" class="d-block w-100" style="height: 650px; object-fit: cover;" alt="Image 2">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>श्रीमद् भागवत गीता :</b></h1>
                <p>“You are only entitled to the action, never to its fruits.”</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/home-3.webp" class="d-block w-100" style="height: 650px; object-fit: cover;" alt="Image 3">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>श्रीमद् भागवत गीता :</b></h1>
                <p>“Change is the law of the universe.”</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>

<!-- Temples Section -->
<section class="temples-header text-center my-5">
    <h3><i class="fa-solid fa-om"></i> Temples <i class="fa-solid fa-om"></i></h3>
    <h1><b>Most Popular Temples</b></h1>
    <div class="row justify-content-center mt-4">
        @* Static Data (For Frontend Only) *@
        @{
            var temples = new List<dynamic>
                {
                new { Name = "Temple 1", Deity = "Shiva", ImagePath = "images/home-3.webp", Id = 1 },
                new { Name = "Temple 2", Deity = "Vishnu", ImagePath = "images/home-4.webp", Id = 2 },
                new { Name = "Temple 3", Deity = "Durga", ImagePath = "images/home-3.webp", Id = 3 },
                new { Name = "Temple 4", Deity = "Ganesha", ImagePath = "images/home-4.webp", Id = 4 }
                };
        }
        @foreach (var temple in temples)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/@temple.ImagePath" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@temple.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title"><b>@temple.Name</b></h5>
                        <p class="card-text">Deity: @temple.Deity</p>
                        <a href="/Temples/Details/@temple.Id" class="btn btn-outline-primary">See More</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="mt-4">
        <a href="/Temples/All" class="btn btn-primary btn-lg">See More Temples</a>
    </div>
</section>

<!-- Sacred Knowledge Section -->
<section class="section-about text-center my-5">
    <h3><i class="fa-solid fa-om"></i> Sacred Knowledge <i class="fa-solid fa-om"></i></h3>
    <h1><b>Some Life Lessons</b></h1>
    <div class="my-4">
        <img src="~/images/black-1.webp" alt="Sacred Knowledge" class="img-fluid rounded shadow" style="max-height: 300px;">
    </div>
    <div class="text-center px-2">
        <h2><i class="fa-solid fa-om"></i> We Hindus believe in the holy Vedas, the eternal light of divine knowledge</h2>
        <h4 class="mt-3">"Satyameva Jayate" - Truth alone triumphs</h4>
        <div class="row justify-content-center mt-4">
            <div class="col-md-3 ">
                <p><i class="fa-solid fa-check text-success"></i> Rig-veda</p>
                <p><i class="fa-solid fa-check text-success"></i> Sama-Veda</p>
            </div>
            <div class="col-md-3 ">
                <p><i class="fa-solid fa-check text-success"></i> Yajur-Veda</p>
                <p><i class="fa-solid fa-check text-success"></i> Atharva-Veda</p>
            </div>
        </div>
        <a href="/Lessons" class="btn btn-outline-primary btn-lg mt-4">Learn More</a>
    </div>
</section>

<!-- Events Section -->
<section class="section-events text-center my-5">
    <h3><i class="fa-solid fa-om"></i> Festivals <i class="fa-solid fa-om"></i></h3>
    <h1><b>Latest Events</b></h1>
    <div class="row justify-content-center mt-4">
        @* Static Data (For Frontend Only) *@
        @{
            var events = new List<dynamic>
                {
                new { Name = "Shivaratri", EventDate = "Aug 15", Contact = "9841234567", Details = "Night dedicated to Lord Shiva." },
                new { Name = "Dashain", EventDate = "Oct 10", Contact = "9801234567", Details = "The biggest Hindu festival." },
                new { Name = "Tihar", EventDate = "Nov 5", Contact = "9811234567", Details = "Festival of lights and worship of animals." }
                };
        }
        @foreach (var ev in events)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100 shadow-sm p-3">
                    <h5 class="card-title"><b>@ev.Name</b></h5>
                    <h2><i class="fa-regular fa-calendar-days fa-2x"></i> <b>@ev.EventDate</b></h2>
                    <h4><b>Contact:</b> @ev.Contact</h4>
                    <p><b>About:</b> @ev.Details</p>
                </div>
            </div>
        }
    </div>
</section>
