@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<section class="position-relative">
    <img src="images/image-3.webp" alt="Contact Us" class="img-fluid w-100" style="max-height: 400px; object-fit: cover;">
    <div class="position-absolute top-50 start-50 translate-middle text-black fs-1 fw-bold">
        Contact Us
    </div>
</section>

<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fa fa-th fa-3x text-primary mb-3"></i>
                <h4>Get In Touch</h4>
                <p><abbr title="Phone">P:</abbr> 123456789</p>
                <p>E: <a href="mailto:email@email.com" class="text-muted">email@email.com</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fa fa-map-marker fa-3x text-primary mb-3"></i>
                <h4>Our Location</h4>
                <address>
                    Kathmandu, Nepal
                </address>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded shadow-sm h-100">
                <i class="fa fa-book fa-3x text-primary mb-3"></i>
                <h4>24x7 Support</h4>
                <p>Call Us:</p>
                <p class="text-muted">1234 567 890</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="ratio ratio-4x3">
                <iframe src="https://www.google.com/maps/embed/v1/place?q=Nepal+kathamandu&amp;key=AIzaSyBSFRN6WWGYwmFi498qXXsD2UwkbmD74v4"
                        style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>

        <div class="col-md-6">
            <form id="contactForm" novalidate>
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Name</label>
                    <input type="text" class="form-control" id="nameInput" placeholder="Name" required>
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>

                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" class="form-control" id="emailInput" placeholder="E-mail" required>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <div class="mb-3">
                    <label for="messageInput" class="form-label">Message</label>
                    <textarea class="form-control" id="messageInput" rows="5" placeholder="Message" required></textarea>
                    <div class="invalid-feedback">Please enter your message.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
                <div id="formSuccess" class="mt-3 text-success" style="display:none;">E-mail was successfully sent.</div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap 5 form validation example
        (function () {
            'use strict'
            var form = document.getElementById('contactForm');
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                event.stopPropagation();

                if (!form.checkValidity()) {
                    form.classList.add('was-validated');
                } else {
                    // Just simulate success message for frontend only
                    document.getElementById('formSuccess').style.display = 'block';
                    form.reset();
                    form.classList.remove('was-validated');
                }
            }, false)
        })();
    </script>
}


